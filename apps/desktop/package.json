{
  "name": "wawa-smart-erp",
  "version": "1.3.3",
  "description": "WAWA Smart ERP - 통합 학원 관리 시스템",
  "private": true,
  "main": "dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sigongjoa/wawa_smart_erp.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && vite build",
    "preview": "vite preview",
    "dist": "electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "npx ts-node e2e/generate-pdf-report.ts"
  },
  "dependencies": {
    "@wawa/notion-client": "workspace:*",
    "axios": "^1.6.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.wawa.smart.erp",
    "productName": "WAWA Smart ERP",
    "publish": null,
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "WAWA-Smart-ERP-Setup-${version}.exe"
    },
    "asar": true
  }
}